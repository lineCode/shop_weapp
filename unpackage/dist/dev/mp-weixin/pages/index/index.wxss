::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab-view::before {
  content: '';
  position: absolute;
  border-bottom: 1rpx solid #eaeef1;
  -webkit-transform: scaleY(0.5);
  -ms-transform: scaleY(0.5);
      transform: scaleY(0.5);
  bottom: 0;
  right: 0;
  left: 0;
}
