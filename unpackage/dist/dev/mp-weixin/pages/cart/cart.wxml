<view class="grace-body"><block wx:if="{{shoppingCard.length<1}}"><view style="margin-top:150px;"><grace-empty vue-id="1" iconSize="{{168}}" iconType="{{4}}" iconColor="#E1E1E1" bind:__l="__l"></grace-empty><view class="grace-text-center grace-margin-top"><text class="grace-text-small">您的购物车空空如也 ~</text><text class="grace-text-small grace-blue" style="margin-left:20rpx;">去购物</text></view></view></block><block wx:for="{{shoppingCard}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="grace-shoppingcard grace-margin-top"><view class="grace-title grace-flex-vcenter"><view><grace-check-btn style="margin-right:12px;" vue-id="{{'2-'+index}}" parameter="{{[index]}}" data-shopindex="{{item.index}}" checked="{{item.checked}}" data-event-opts="{{[['^change',[['shopChange']]]]}}" bind:change="__e" bind:__l="__l"></grace-check-btn>{{item.shopName}}</view><navigator class="grace-more">进店<text class="grace-icons icon-arrow-right"></text></navigator></view><block wx:for="{{item.items}}" wx:for-item="goods" wx:for-index="indexItem" wx:key="indexItem"><view class="goods"><grace-check-btn style="margin:12px 12px 0 0;" vue-id="{{'3-'+index+'-'+indexItem}}" checked="{{goods.checked}}" parameter="{{[index+'-'+indexItem]}}" data-event-opts="{{[['^change',[['itemChange']]]]}}" bind:change="__e" bind:__l="__l"></grace-check-btn><image src="{{goods.img}}" mode="widthFix"></image><view class="body"><view class="goods-title">{{goods.goodsName}}</view><view class="goods-price">{{'￥'+goods.price+''}}<view class="goods-number"><grace-number-box vue-id="{{'4-'+index+'-'+indexItem}}" disabled="{{true}}" index="{{indexItem}}" datas="{{index+''}}" value="{{goods.count}}" maxNum="{{100}}" minNum="{{1}}" data-event-opts="{{[['^change',[['numberChange']]]]}}" bind:change="__e" bind:__l="__l"></grace-number-box></view></view><view class="goods-remove grace-icons icon-remove" id="{{'removeIndex_'+index+'_'+indexItem}}" data-event-opts="{{[['tap',[['removeGoods',['$event']]]]]}}" bindtap="__e"><text>删除</text></view></view></view></block></view></block><view style="height:120rpx;"></view><block wx:if="{{shoppingCard.length>=1}}"><view class="grace-footer grace-nowrap grace-flex-vcenter"><view class="grace-shoppingcard-checkbtn grace-nowrap grace-flex-vcenter"><grace-check-btn vue-id="5" checked="{{true}}" data-event-opts="{{[['^change',[['itemChangeAll']]]]}}" bind:change="__e" bind:__l="__l"></grace-check-btn><text class="grace-shoppingcard-check-text">{{selectText}}</text></view><view class="grace-shoppingcard-text">合计 :<text style="font-size:36rpx;color:#F00;">{{"￥"+totalprice}}</text></view><button style="background:#E55D52;width:260rpx;flex-shrink:0;" type="warn" data-event-opts="{{[['tap',[['checkout',['$event']]]]]}}" bindtap="__e">立即结算</button></view></block></view>