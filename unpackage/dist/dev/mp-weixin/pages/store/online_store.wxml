<view><common-header vue-id="1" title="商家信息" bind:__l="__l"></common-header><view class="go-store"><view class="left-part"><image class="store-image" src="{{info.logo}}" mode="aspectFill"></image></view><view class="right-part"><view class="store-name">{{info.name}}</view><view class="store-num"><text>{{"商品数量："+info.product_num}}</text></view><view class="store-num" style="display:block;"><text>{{info.collect+" 人收藏"}}</text><button class="go-store-btn" type="primary" size="mini" data-event-opts="{{[['tap',[['collect',['$event']]]]]}}" bindtap="__e">{{(info.is_collect==1?'已':'')+"收藏"}}</button></view></view></view><view class="store-banner"><image src="{{info.thumb}}" mode="aspectFill"></image></view><view class="{{['grace-nowrap grace-border-b grace-flex-vcenter',isFixed?'grace-fixed-top':'']}}" style="background:#FFFFFF;"><view data-event-opts="{{[['tap',[['changeOrder',[1]]]]]}}" class="graceSelectMenuItem grace-flex grace-nowrap grace-flex-center grace-flex-vcenter" catchtap="__e"><text>综合排序</text><block wx:if="{{currentOrder==1&&orderType==1}}"><image class="orderImg" src="/static/icon/asc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder==1&&orderType==2}}"><image class="orderImg" src="/static/icon/desc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder!=1}}"><image class="orderImg" src="/static/icon/order.png" mode="aspectFit"></image></block></view><view data-event-opts="{{[['tap',[['changeOrder',[2]]]]]}}" class="graceSelectMenuItem grace-flex grace-nowrap grace-flex-center grace-flex-vcenter" catchtap="__e"><text>销量</text><block wx:if="{{currentOrder==2&&orderType==1}}"><image class="orderImg" src="/static/icon/asc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder==2&&orderType==2}}"><image class="orderImg" src="/static/icon/desc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder!=2}}"><image class="orderImg" src="/static/icon/order.png" mode="aspectFit"></image></block></view><view data-event-opts="{{[['tap',[['changeOrder',[3]]]]]}}" class="graceSelectMenuItem grace-flex grace-nowrap grace-flex-center grace-flex-vcenter" catchtap="__e"><text>价格</text><block wx:if="{{currentOrder==3&&orderType==1}}"><image class="orderImg" src="/static/icon/asc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder==3&&orderType==2}}"><image class="orderImg" src="/static/icon/desc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder!=3}}"><image class="orderImg" src="/static/icon/order.png" mode="aspectFit"></image></block></view><view data-event-opts="{{[['tap',[['changeOrder',[4]]]]]}}" class="graceSelectMenuItem grace-flex grace-nowrap grace-flex-center grace-flex-vcenter" catchtap="__e"><text>评论数量</text><block wx:if="{{currentOrder==4&&orderType==1}}"><image class="orderImg" src="/static/icon/asc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder==4&&orderType==2}}"><image class="orderImg" src="/static/icon/desc.png" mode="aspectFit"></image></block><block wx:if="{{currentOrder!=4}}"><image class="orderImg" src="/static/icon/order.png" mode="aspectFit"></image></block></view></view><view class="goods-list"><view class="product-list"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view data-event-opts="{{[['tap',[['toProduct',['$0'],[[['list','id',item.id,'id']]]]]]]}}" class="product" bindtap="__e"><image mode="aspectFill" src="{{item.thumb}}"></image><view class="name">{{item.name}}</view><view class="info"><view class="price">{{"￥"+item.price}}</view><view class="slogan">{{item.sold+" 人付款"}}</view></view></view></block></view><view class="loading-text">{{loadingText}}</view></view><grace-full-loading vue-id="2" graceFullLoading="{{loading}}" logoUrl="https://staticimgs.oss-cn-beijing.aliyuncs.com/logo.png" bind:__l="__l"></grace-full-loading></view>